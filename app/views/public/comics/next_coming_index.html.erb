<div class="pb-4" style="padding-top:205px; background-color:#FFF;">
  <div class="col-10 mt-5 mx-auto">
    <%= link_to root_path, class:"btn btn-sm mb-4 px-3 border", style:"color:#00264D;" do %>
      <i class="bi bi-arrow-left"></i>
    <% end %>
    <h5 class="ml-5 mb-5 px-5"><b>Next Coming 一覧</b></h5>
    <div class="view_div">
      <div class="col-lg-11 view_each_div">
        <% @next_comics.each do |book| %>
          <div class="mx-2">
            <div style="width:150px;">
              <%= link_to top_comic_info_comics_path(isbn: book['isbn'], from_rws: true, can_not_create_record: true), class:"img_link" do %>
                <%= image_tag book.large_image_url, class:"img_comic" %>
              <% end %>
            </div>
            <div class="py-4 mb-3" style="width:150px; height:auto;">
              <p class="mb-2" style="height:50px;">
                <%= link_to top_comic_info_comics_path(isbn: book['isbn'], from_rws: true, can_not_create_record: true), class:"link_text text-dark" do %>
                  <%= book.title.truncate(17) %>
                <% end %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
      
  <div class="media_pc">
    <div class="d-flex flex-wrap" style="justify-content:center;">
      <%= paginate @next_comics, window: 4 %>
    </div>
  </div>
  <div class="media_tb">
    <div class="d-flex flex-wrap" style="justify-content:center;">
      <%= paginate @next_comics, window: 2 %>
    </div>
  </div>
  <div class="media_sp">
    <div class="d-flex flex-wrap" style="justify-content:center;">
      <%= paginate @next_comics, window: 1 %>
    </div>
  </div>
  
  <span id="back" style="width:100%; display:none;">
    <a href=""  style="text-decoration:none;">
        <div class="d-flex justify-content-center border mt-5 mb-4 mx-auto" 
             style="width:95%; height:60px; line-height:60px; background-color:#FFF; box-shadow:5px 5px 5px #DDD;">
          <p class="mb-0 text-dark">TOPへ戻る<i class="bi bi-arrow-up"></i></p>
        </div>
    </a>
  </span>
</div>

<script>
  $(function(){
    var windowHeight = $(window).height();
    var mainHeight = $('main').height();
    if(mainHeight > windowHeight) {
        $('#back').show();
    } else {
        $('#back').hide();
    }
  })
</script>