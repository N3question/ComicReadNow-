<div style="background-color:#EEE; height:100px;"></div>
  <div style="background-color:#EEE; padding:30px 0; min-height: 71vh;">
    <div class="col-lg-9 mx-auto p-5 border" style="background-color:#FFF; box-shadow:10px 10px 10px 7px #DDD;">
       
        <%= link_to root_path, class:"btn btn-sm mb-4 px-3 border", style:"color:#00264D;" do %>
          <i class="bi bi-arrow-left"></i>
        <% end %>
            
        <div class="d-flex flex-wrap"  style="padding:30px 20px; justify-content:center;">
            <%= image_tag @top_comic_info["largeImageUrl"], class:"m-3", style:"width:170px; height:250px; background-size: cover; border:0.5px solid #00264D; box-shadow:8px 8px 20px #999;" %>
         
            <div class="p-3">
                <h5><b><%= @top_comic_info["title"] %>　</b><small>の詳細</small></h5>
                <div class="mt-3">
                  著者：　　　<%= @top_comic_info["author"] %>
                  <small>(<%= @top_comic_info["authorKana"] %>)</small><br>
                  出版社：　　<%= @top_comic_info["publisherName"] %><br>
                  発売日：　　<%= @top_comic_info["salesDate"] %><br>
                </div>
                
                <div class="mt-4">
                    <% if @top_rb_comic_info.present? %>
                    <% user = User.find(@top_rb_comic_info.user_id) %>
                    <% sites = @top_rb_comic_info.sites.all %>
                        <div class="d-flex" style="align-items: center;">
                          <small class="border p-1 text-success">以下の漫画サイトで読むことができます！</small><br>
                          <% read_judgement_false = TotalReadableInfo.find_by(comic_id: @top_rb_comic_info.id, can_read: false) %>
                          <% if read_judgement_false.present? %>
                            <%= link_to "編集", edit_comic_path(@top_rb_comic_info.id), class:"btn btn-sm rounded-pill mb-2 ml-auto px-3 text-nowrap", style:"background-color:#66CC00; color:white;" %>
                          <% end %>
                        </div>
                        
                        <% sites.each do |site| %>
                          <p class="pb-0 text-success d-inline-flex">
                            <i class="bi bi-check-lg"></i>
                          </p>
                          <%= site.name %>　
                        <% end %><br>
                        
                        <small>
                          <%= @top_rb_comic_info.created_at.strftime('%Y年%m月%d日%H時%M分') %>　
                          <b><%= user.nick_name %></b> さんがサイト情報更新
                        </small>
                        
                        <div class="d-flex" style="align-items: center;">
                          <% if user_signed_in? %>
                          <% read_judgement_info = TotalReadableInfo.find_by(comic_id: @top_rb_comic_info.id, user_id: current_user.id) %>
                              
                              <% if read_judgement_info.nil? %>
                                  <%= form_with url: comic_read_judgement_path(@top_rb_comic_info.id) do |f| %>
                                    <div class="d-flex">
                                    <%= f.radio_button :read_info, true, checked: true, style:"display:none;" %>
                                    <%= f.label :read_info, "読めた", for:"read_info_true", class:"mt-3 mb-0 px-2 py-1 text-nowrap read_judgement can_read_radio" %>　
                                    <%= f.radio_button :read_info, false, style:"display:none;" %>
                                    <%= f.label :read_info, "読めなかった", for:"read_info_false", class:"mt-3 mb-0 px-2 py-1 text-nowrap read_judgement can_not_read_radio" %>　
                                    <!--<#%= f.radio_button :type, 'hoge',{ :onclick => remote_function(:update => "total", :url =>{ :action => 'total_number'}, :submit => :user) } %>-->
                                    <!--<span id="total"><#%= render :partial => 'total' %>&lt;</span>-->
                                    <%= f.submit "確定", class:"btn btn-sm btn-dark mt-3 mr-5" %>
                                    </div>
                                  <% end %>
                              <% else %>
                                  <p class="mt-3 mr-2 mb-0 px-2 py-1 text-nowrap read_judgement can_read_radio">読めた</p>
                                  <p class="mt-3 mb-0">
                                    人
                                    </p>
                                  <p class="mt-3 mr-2 ml-3 mb-0 px-2 py-1 text-nowrap read_judgement can_not_read_radio">読めなかった</p>
                                  <p class="mt-3 mb-0">
                                    人
                                  </p>
                              <% end %>
                              
                              <% has_bookmark = Bookmark.find_by(comic_id: @top_rb_comic_info.id, user_id: current_user.id) %>
                              <% if has_bookmark %>
                                  <%= link_to comic_destroy_bookmark_path(@top_rb_comic_info.id), class:"btn p-0" do %>
                                    <div class="d-inline-flex mt-4">
                                      <h3><i class="bi bi-bookmark-check-fill"></i></h3>
                                      <small class="p-1" style="vertical-align:middle;">追加済み</small>
                                    </div>
                                  <% end %>
                              <% elsif has_bookmark.nil? %>
                                  <%= link_to comic_bookmark_path(@top_rb_comic_info.id), class:"btn p-0" do %>
                                    <div class="d-inline-flex mt-4">
                                      <h3><i class="bi bi-bookmark-plus"></i></h3>
                                      <small class="p-1" style="vertical-align:middle;">追加</small>
                                    </div>
                                  <% end %>
                              <% end %>
                          <% end %>
                      <% else %>
                      <%= link_to new_comic_path(isbn: @top_comic_info['isbn']), class:'btn btn-outline-dark w-100' do %>
                        <i class="bi bi-pencil-square"></i><small>　サイト情報追加</small>
                      <% end %>
                    <% end %>
                </div><br>
                version : <%= @top_rb_comic_info.version %><br>
                can_read : <%= @top_rb_comic_info.can_read %><br>
                can_not_read: <%= @top_rb_comic_info.can_not_read %>
            </div>
            
        </div>
        
    </div>
  </div>
</div>