<div class="container" style="margin-top:100px;">
  <div class="row mx-auto" style="padding:30px 30px 45px;">
      
        <div class="col-lg-9 mx-auto">
            <%= link_to root_path, class:"btn btn-sm mb-4 px-3 border", style:"color:#00264D;" do %>
              <i class="bi bi-arrow-left"></i>
            <% end %>
            
            <h5 class=""><b>'<%= params[:keyword] %>'の検索結果</b></h5>
            
            <% @rakuten_web_services.each do |book| %>
                <table class="table table-borderless">
                  <tr>
                      <td style="width:150px;">
                        <%= link_to root_path do %>
                          <%= image_tag book["largeImageUrl"], style:"width:150px; border:0.5px solid #00264D; box-shadow:8px 8px 20px #BBB;" %>
                        <% end %>
                      </td>
                      <td>
                        <%= link_to root_path do %>
                          <h6><b><%= book["title"] %></b></h6>
                        <% end %>
                      </td>
                  </tr>
                  <hr>
                </table>
            <% end %>
        </div>
      
  </div>
</div>